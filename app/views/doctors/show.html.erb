<div class="wrapper">
<div class="container">
<div class="row">

  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 blue">
    <div><img src= <%=@doctor.photo%> alt=""></div>
    <div class="rating-info">
        <div class="btn btn-primary card-doctor-index-rating-button" data-toggle="modal" data-target="#myModal"> Review!</div>
        <div><a href="#" class="btn btn-success">Reviews</a></div>
        <div class="card-doctor-rating-average"> <%= @doctor.average_review.to_f.round(1) %></div>
    </div>
  </div>


  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 red">
        <h1><%= @doctor.name %></h1>
        <% specialties = @doctor.specialties %>
        <% specialties.each do |specialty| %>
        <p> <strong><%=specialty.name%></strong> </p>
        <% end %>
        <p><strong>Description: </strong><%=@doctor.description%></p>
        <br>
        <p><strong>ConvÃªnios: </strong><%=@doctor.insurance%></p>
        <p><strong>Contact: </strong><%=@doctor.phone%></p>
        <p><strong>Address: </strong><%=@doctor.street_name.to_s + " - " + @doctor.city_name.to_s%></p>
        <p><strong>Website: </strong><%=link_to @doctor.website, @doctor.website %></p>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 green">
    <% reviews = @doctor.reviews %>
    <% reviews.each do |review| %>
    <section style="background-color: #FAFAFA; padding: 20px; margin: 20px 0; box-shadow: 1px 1px 3px #F0F0F0; position: relative">

    <div style="display: flex; align-items: center;">
      <div style="text-align: center; margin-right: 40px">
      <h4>Rating:</h4>
      <h2><%=review.rating%></h2>
    </div>

    <div>
      <h4><strong><%=review.title%></strong></h4>
      <h5><%=review.comment%></h5>
      <h6><%=review.user.first_name%>, <%=review.user.created_at%></h6>
    </div>

      </section>
      <% end %>
  </div>


</div><!-- END ROW -->
</div> <!-- END CONTAINER -->
</div> <!-- END WRAPPER -->
</div> <!-- END BACKGROUND -->











<!-- MODAL -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Review Dr.<%= @doctor.name %></h4>
      </div>

      <div class="modal-body">
        <%= simple_form_for [@doctor, @review] do |f| %>
        <%= f.input :title, label: false, placeholder: "Review title" %>
        <%= f.input :comment, label: false, placeholder: "Comment" %>
        <%= f.input :rating, collection: 1..5, placeholder: "Rating" %>
      </div>

      <div class="modal-footer">
        <%= f.button :submit %>
        <% end %>
      </div>

    </div>
  </div>
</div><!-- END MODAL -->




