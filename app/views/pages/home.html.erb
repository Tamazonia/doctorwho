
<div class="fonts">

<div class="banner" style="background-image: linear-gradient(0deg, rgba(255,255,255,1.0) 0%, rgba(0,111,139,0.1) 50%), url('http://res.cloudinary.com/livpuppa/image/upload/v1493192993/banner_wssfw1.jpg');">



  <div class="banner-content">
      <div class="title">
        <h1>Find a doctor you trust & fits your needs</h1>
      </div>


        <form action="<%=doctors_path%>" class="seach-form search">
          <input type="text" name = "search[name]" id="search_name" class="search-input" placeholder="Name"></input>
          <input type="text" name = "search[street_name]" id="search_street_name" class="search-input" placeholder="Place in Sao Paulo"></input>
          <select name="search[specialty]" id="search_specialty" class="search-input" type="text" style="height:42px; background-color: white; border-radius: 0px">
              <option value="" >Specialty</option>
              <%Specialty.all.each do |specialty|%>
                <option value=<%=specialty.name%>><%=specialty.name%></option>
                 <%end%>
          </select>
          <button class="btn btn-treehouse">Find</button>
        </form>


  </div>
</div> <!-- END OF BANNER BACKGROUND  -->


<div class="block2">
<h2 class="pool"> Latest Reviews </h2>
<div class="row">


<div class="col-xs-12 col-sm-4">
  <div class="card-home">
   <% r = Review.last %>
    <div class="card-home-category"> <strong><%= link_to r.doctor.name, doctor_path(r.doctor) %> </strong> </div>
    <div class="card-home-description-title">
      <h2>"<%= truncate(r.title, length: 17) %>" </h2>
      <p class="small-p"><%= (r.created_at.strftime('%d %b %Y')  ) %> </p>
    </div>
    <div class="card-home-description-text">
      <p class="medium-p">"<%= truncate(r.comment, length: 65)%>"</p>
    </div>
    <img class="card-home-user" src="<%= r.doctor.photo %>">
  </div>
</div>


