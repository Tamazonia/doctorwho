<title><%= yield(:title_tag).blank? ? "DoctorWho - Find a doctor you trust & fits your needs" : yield(:title_tag) %></title>

    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= favicon_link_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag    'application', media: 'all' %>

    <!-- FACEBOOK META -->
      <meta property="og:title" content="DoctorWho - Find the best doctors">
      <meta property="og:type" content="website">
      <!-- <meta property="og:image" content="facebook-card.jpg"> -->
      <meta property="og:image" content='<%=image_tag "facebook-card.jpg"%>'>
      <meta property="fb:app_id" content="438363436514448">
      <meta property="og:description" content="DoctorWho is the best plac to find and review doctors.">
      <meta property="og:site_name" content="DoctorWho">
      <meta property="og:url" content="<%=request.url%>">
    <!-- FACEBOOK META END -->

    <!-- GOOGLE META -->
      <meta name="description" content="DoctorWho is the best plac to find and review doctors...">
    <!-- GOOGLE META END -->

    <!-- TWITTER META -->
      <!-- <meta name="twitter:card" content="summary_large_image"> -->
      <meta name="twitter:card" content="summary_large_image">
